{
	"name": "user-auth",
	"version": "1.0.0",
	"private": true,
	"description": "A monorepo for a user authentication API following DDD architecture.",
	"author": "Cainã Jucá <cainajuca@gmail.com>",
	"license": "MIT",
	"scripts": {
		"lint": "eslint . --fix",
		"build": "tsc && tsc-alias",
		"start:dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
		"start:prod": "node dist/index.js",
		"stop:linux": "sudo lsof -t -i :8080 | xargs sudo kill -9",
		"restart:linux": "npm run stop:linux && npm run start:prod"
	},
	"dependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.6",
		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.8.0",
		"mongoose": "^8.5.3",
		"redis": "^4.7.0",
		"reflect-metadata": "^0.2.2",
		"tsc-alias": "^1.8.10"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^22.5.0",
		"@typescript-eslint/eslint-plugin": "^8.2.0",
		"@typescript-eslint/parser": "^8.2.0",
		"eslint": "^9.9.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"nodemon": "^3.1.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.5.4"
	},
	"resolutions": {
		"**/typescript": "^5.5.4"
	}
}
