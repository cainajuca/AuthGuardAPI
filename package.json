	"license": "MIT",
	"scripts": {
		"build": "tsc -p tsconfig.build.json && tsc-alias",
		
		"start:dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
		"start:docker:dev": "docker compose -f docker-compose.dev.yml up --build",

		"start:prod": "node dist/index.js",
		"start:docker:prod": "docker compose -f docker-compose.prod.yml up --build",

		"test": "jest",
		"test:unit": "jest --runInBand --testPathIgnorePatterns integration",
		"test:all": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit"
	},
	"dependencies": {
		"@sendgrid/mail": "^8.1.3",
		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.8.0",
		"mongoose": "^8.5.3",
		"ms": "^2.1.3",
		"tsconfig-paths": "^4.2.0",
		"redis": "^4.7.0",
		"reflect-metadata": "^0.2.2",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"winston": "^3.14.2",
		"winston-daily-rotate-file": "^5.0.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.13",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/ms": "^0.7.34",
		"@types/node": "^22.5.0",
		"@types/supertest": "^6.0.2",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"@types/winston": "^2.4.4",
		"jest": "^29.7.0",
		"nodemon": "^3.1.4",
		"supertest": "^7.0.0",
