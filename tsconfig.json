{
	"compilerOptions": {

		"experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES6",	

		"module": "NodeNext",
		"baseUrl": ".",
		"outDir": "dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"paths": {      
			"@root/*": ["./*"],
      "@presentation/*": ["src/1-presentation/*"],
      "@application/*": ["src/2-application/*"],
      "@domain/*": ["src/3-domain/*"],
      "@infra/*": ["src/4-infra/*"],
      "@shared/*": ["src/5-shared/*"]
    },
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}