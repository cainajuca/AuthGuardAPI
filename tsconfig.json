{
	"compilerOptions": {

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ES6",
		"resolveJsonModule": true,
		"module": "NodeNext",
		"baseUrl": "./src",
		"outDir": "dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": ["node_modules", "dist"]
}